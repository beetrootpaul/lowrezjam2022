{
  "name": "towers-of-survival",
  "version": "1.0.0",
  "description": "> a low-rez tower defense mini-game",
  "main": "index.js",
  "scripts": {
    "clear": "rimraf build/ && mkdirp build/src/screens/",
    "minify": "luamin -f src/screens/screen_gameplay.lua > build/src/screens/screen_gameplay.lua",
    "build": "npm run minify",
    "prebuild-watch": "npm run build",
    "build-watch": "chokidar \"./src/**/*.lua\" -c \"npm run build\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beetrootpaul/towers-of-survival.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/beetrootpaul/towers-of-survival/issues"
  },
  "homepage": "https://github.com/beetrootpaul/towers-of-survival#readme",
  "devDependencies": {
    "chokidar-cli": "3.0.0",
    "luamin": "1.0.4",
    "mkdirp": "1.0.4",
    "rimraf": "3.0.2"
  }
}
